CompileFlags:
  CompilationDatabase: ./Build

Diagnostics:
  ClangTidy:
    Add:
      - "bugprone-*"
      - "hicpp-*"
      - "misc-*"
      - "modernize-*"
      - "performance-*"
      - "portability-*"
      - "readability-*"
    Remove:
      - "readability-else-after-return"
      - "readability-braces-around-statements"
      - "misc-no-recursion"
      - "hicpp-braces-around-statements"
      - "hicpp-vararg"
